<form action="POST" id="form">
    <div id="id">
        <input type="hidden" name="id">
    </div>
    <div id="picture">
        <label for="in_picture">Picture: </label>
        <input id="in_picture" type="file" name="picture">
    </div>
    <div id="name">
        <label for="in_name">Name: </label>
        <input id="in_name" type="text" name="name">
    </div>
    <div id="resume">
        <label for="in_resume">Resume: </label>
        <textarea id="in_resume" name="resume" cols="30" rows="10"></textarea>
    </div>
    <div id="category">
        <select name="type" id="type">
            <option value="restaurante" selected>restaurante</option>
            <option value="hotel">hotel</option>
        </select>
        <div id="categories">
            <% categories.forEach(e => { %>
                <div id="<%= e.name %>" class="item">
                    <label for="cb_<%= e.name %>"><%= e.name %></label>
                    <input id="cb_<%= e.name %>" type="checkbox" name="<%= e._id.toString() %>">
                </div>
            <% }); %>
        </div>
    </div> 
    <div id="informations">
        <label for="in_informations">Informations: </label>
        <textarea id="in_informations" name="informations" cols="30" rows="10"></textarea>
    </div>
    <div id="telephones">
        <div id="insert">
            <input type="button" value="telephone">
            <input type="button" value="whatsapp">
        </div>
    </div>
    <div id="local">
        <div id="cep">
            <label for="in_cep">Cep:</label>
            <input id="in_cep" type="text" name="cep">
        </div>
        <div id="uf">
            <select name="uf">
                <option value="" selected>None</option>
                <option value="AC">AC</option>
                <option value="AL">AL</option>
                <option value="AM">AM</option>
                <option value="AP">AP</option>
                <option value="BA">BA</option>
                <option value="CE">CE</option>
                <option value="DF">DF</option>
                <option value="ES">ES</option>
                <option value="GO">GO</option>
                <option value="MA">MA</option>
                <option value="MG">MG</option>
                <option value="MS">MS</option>
                <option value="MT">MT</option>
                <option value="PA">PA</option>
                <option value="PB">PB</option>
                <option value="PE">PE</option>
                <option value="PI">PI</option>
                <option value="PR">PR</option>
                <option value="RJ">RJ</option>
                <option value="RN">RN</option>
                <option value="RO">RO</option>
                <option value="RR">RR</option>
                <option value="RS">RS</option>
                <option value="SC">SC</option>
                <option value="SE">SE</option>
                <option value="SP">SP</option>
                <option value="TO">TO</option>
            </select>
        </div>
        <div id="city">
            <label for="in_city">City:</label>
            <input id="in_city" type="text" name="city">
        </div>
        <div id="neighborhood">
            <label for="in_neighborhood">Neighborhood:</label>
            <input id="in_neighborhood" type="text" name="neighborhood">
        </div>
        <div id="street">
            <label for="in_street">Street:</label>
            <input id="in_street" type="text" name="street">
        </div>
        <div id="number" maxlength="10">
            <label for="in_number">Number:</label>
            <input id="in_number" type="text" name="number">
        </div>
        <div id="complement">
            <label for="in_complement">Complement:</label>
            <textarea id="in_complement" name="complement" cols="30" rows="10"></textarea>
        </div>
    </div>
    <div id="movie">
        <label for="in_movie">Movie:</label>
        <input id="in_movie" type="text" name="movie">
    </div>
    <div id="promotion">
        <select>
            <option value="" selected>None</option>
            <% promotions.forEach(e => { %>
                <option value="<%= e._id.toString() %>" html="<%= e.percentage %>"><%= e.percentage %></option>
            <% }); %>
        </select>
    </div>

    <input id="insert" type="button" value="insert">
    <input id="update" type="button" value="update">
</form>