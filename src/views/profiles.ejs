<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profiles</title>

    
    <style>
        #filter {
            display: flex;
        }

        #table {
            display: flex;
        }
        #table > div {
            background-color: #ddd;
            width: 200px;
            padding: 10px;
            margin: 10px;
        }

        .unvisible { display: none; }

        /* btn */
            .btn.promotion {
                padding: 10px;
                border-radius: 2px;
                background-color: red;
            }
            .btn.promotion:hover {cursor: pointer;}
            /* div#promotion input {display: none;} */
            div#promotion input:checked ~ label.promotion {background-color: green;}
    </style>
</head>
<body>
    <div id="filter">
        <div id="promotion">
            <input id="cb_promotion" type="checkbox">
            <label class="btn promotion" for="cb_promotion">Promotion</label>
        </div>
        <div id="type">
            <select id="sl_type">
                <option value="restaurante">Restaurante</option>
                <option value="hotel">hotel</option>
            </select>
        </div>
    </div>
    <div id="table">

        <div id="empty" class="unvisible">
            <h2>Vazio, tente redefinir as pesquisas</h2>
        </div>
    </div>

    <script type="module">
        import FilterFunctions from './FilterFunctions.js'
        import TableFunctions from './TableFunctions.js'

        var arrayElements = []

        const filterfunction = new FilterFunctions(
            document.querySelector('#filter'),
            document.querySelector('#table'),
            arrayElements
        )
        const tableFunctions = new TableFunctions(document.querySelector('#table'))

        // query
        fetch('http://localhost:4000/api/profile/getList')
            .then((res) => { return res.json() })
            .then((data) => {
                if (data.length == 0) return tableFunctions.resultNull()

                filterfunction.setArray(data)

                data.forEach(e => {
                    tableFunctions.insert(e)
                });
                filterfunction.filterMain()
            })
            .catch((err) => { console.log(err) })
    </script>
</body>
</html>